<div id="chatroom_container" class="row bg-dark text-light">
    <div id="side_panel" class="col-md-2 col-sm-2">
        <h5> Hello  <%= @current_user.email %> </h5>
        <br>
        <h4> Users </h4>
        <%= turbo_stream_from 'users' %>
        <div id='users'>
            <%= render @users %>
        </div>
        <br>
        <h4> Rooms </h4>
        <%= turbo_stream_from 'rooms' %>
        <%= render 'layouts/new_room_form' %>
        <%= turbo_stream_from 'rooms' %>
        <div id='rooms'>
            <%= render @rooms %>
        </div>
    </div>

    <div id="room_container" class="col-md-10 col-sm-10 bg-dark text-light">
    <% if @single_room %>
      <div id="single_room">
        <center><h4 class="btn btn-warning"> <%= @user&.email || @single_room.name %></h4></center>
        <%= turbo_stream_from @single_room %>
        <div id="messages" data-controller="scroll">
          <%= render @messages %>
        </div>
        <%= render partial: 'layouts/new_message_form' %>
      </div>
    <% end %>
    </div>
</div>